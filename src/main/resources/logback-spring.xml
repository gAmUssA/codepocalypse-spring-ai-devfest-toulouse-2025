<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Define color conversion rules for Spring Boot -->
    <conversionRule conversionWord="clr" class="org.springframework.boot.logging.logback.ColorConverter" />
    <conversionRule conversionWord="wex" class="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />
    <conversionRule conversionWord="wEx" class="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />
    
    <!-- Console Appender with colorful pattern -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr([%15.15t]){faint} %clr(%-5level){highlight} %clr([%logger{36}]){cyan} %clr(:){faint} %m%n%wEx</pattern>
        </encoder>
    </appender>
    
    <!-- Logger configurations -->
    
    <!-- Spring Framework -->
    <logger name="org.springframework" level="INFO" />
    <logger name="org.springframework.web" level="INFO" />
    <logger name="org.springframework.boot" level="INFO" />
    
    <!-- Spring AI - Reduce verbosity -->
    <logger name="org.springframework.ai" level="INFO" />
    <logger name="org.springframework.ai.chat.client" level="INFO" />
    <logger name="org.springframework.ai.openai" level="INFO" />
    <logger name="org.springframework.ai.vectorstore.SimpleVectorStore" level="WARN" />
    <logger name="org.springframework.ai.reader.pdf.PagePdfDocumentReader" level="WARN" />
    <logger name="org.springframework.ai.transformer.splitter.TextSplitter" level="WARN" />
    
    <!-- Application loggers -->
    <logger name="com.airline.loyalty" level="INFO" />
    <logger name="com.airline.loyalty.service.DocumentLoaderService" level="INFO" />
    <logger name="com.airline.loyalty.config.SimpleLoggerAdvisor" level="DEBUG" />
    
    <!-- Tomcat -->
    <logger name="org.apache.catalina" level="INFO" />
    <logger name="org.apache.tomcat" level="INFO" />
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
    
</configuration>
